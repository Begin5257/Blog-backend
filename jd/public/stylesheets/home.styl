html
  height 100%
body
  margin 0
  padding 0
  height 100%
  background-color #efefef
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color #555555
  text-decoration none
ul,li
  margin 0
  padding 0
  list-style-type none

#container{
  min-height 100%
}
#wrap
  padding-bottom 36px

#header
  position fixed
  width 100%
  height 36px
  top 0
  left 0
  z-index 5000
  background #efefef url(../images/header-bg.png) repeat-x 0 0
  border-bottom 1px solid #bfbfbf
#header-back
  float left
  top 5px
  left 5px
  position relative
#header-content
  text-align center
  line-height 36px

#main-container
  position relative
  ul
    padding-top 40px
    padding-bottom 17px

.list-content
  width 100%
  height 165px
  background-color #ffffff
  border-bottom 5px solid #efefef
  img
    margin 12px
.list-img
  width 100%
  border-bottom 1px solid #efefef
  div
    float right
    position relative
    width 60%
    height 30px
    top 30px
    line-height 25px
    text-align center
.list-price
  position relative
  left 40px
  top 9px
/************************************************************************************
smaller than 320
*************************************************************************************/
@media screen and (max-width: 320px)
  .list-img
    div
      width 60%