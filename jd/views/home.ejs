<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width,user-scalable=no,minimum-scale=1.0,maximum-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/home.css' />
    <script src="/javascripts/jquery-1.12.1.js"> </script>
    <script src="http://apps.bdimg.com/libs/angular.js/1.3.9/angular.min.js"></script>
</head>
<body>
    <div id="wrap" ng-app="homeApp">
        <div id="header">
            <div id="header-back">
                <a href="shopping">
                    <img src="/images/iconfont-houtui.svg" height="25px" width="25px">
                </a>
            </div>
            <div id="header-content">
                我的主页
            </div>
        </div>
    <div id="main-container" ng-controller="homeCtrl">
        <ul id="item-list">
            <li ng-repeat="item in items" class="list-content">
                <div class="list-img">
                    <img ng-src={{item.img}} height="100px" width="100px">
                    <div>{{item.title}}</div>
                </div>
                <div class="list-price">¥{{item.price}}</div>
            </li>
        </ul>
    </div>
    <div id="list" style="display: none">
        <%= list %>
    </div>
    </div>
    <script src="/javascripts/home.js"> </script>
</body>
</html>