<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width,user-scalable=no,minimum-scale=1.0,maximum-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/shopping.css' />
    <script src="/javascripts/jquery-1.12.1.js"> </script>
    <script src="http://apps.bdimg.com/libs/angular.js/1.3.9/angular.min.js"></script>
</head>
<body ng-app="shopping" ng-controller="shoppingList">
        <div id="wrap">
            <div id="header">
                <div id="header-back">
                    <a href="index">
                        <img src="/images/iconfont-houtui.svg" height="25px" width="25px">
                    </a>
                </div>
                <div id="header-content">
                    购物车
                </div>
            </div>

        <div id="main-container">
            <ul id="item-list">
                <li ng-repeat="x in list track by $index" class="list-content">
                    <input type="checkbox" ng-checked="exists(x.title,order,x.price, selected,x.image,image)" class="spot"
                           ng-click="toggle(x.title,order,x.price, selected,x.image,image)"/>
                    <div class="img">
                        <a href="#"><img ng-src='{{x.image}}' height="120px" width="120px"> </a>
                    </div>
                    <div class="item-title">
                        <a href="#"> {{x.title}} </a>
                        <div class="item-price">¥{{x.price}}</div>
                    </div>
                </li>
            </ul>
            <div id="empty-cart">
                <img src="/images/cart-empty-icon.png" width="100px" height="100px">
                <div id="turn-index">
                    <a href="index">去逛逛</a>
                </div>
            </div>
        </div>
    </div>
    <div id="getI" style="display: none"><%= ID %></div>
    <div id="footer">
        <form>
            <div id="footer-form">
                <input type="checkbox">
                <span>全选</span>
            </div>
            <span class="all">合计</span><span id="total-price"></span>
            <button id="buy-button" ng-click="submit()"><a href="home">确认下单</a></button>
        </form>
    </div>
<script src="/javascripts/shopping.js"></script>
</body>
</html>